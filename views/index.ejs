    <div class='toWatch task'>
      <h3><i class="fas fa-compact-disc titles"></i>Watch</h3>
      <div id='toWatch'></div>
    </div>

    <div class='toRead task'>
      <h3><i class="fas fa-book titles"></i>Read</h3>
      <div id='toRead'></div>
    </div>


    <div class='toEat task'>
      <h3><i class="fas fa-pizza-slice titles"></i>Eat</h3>
      <div id='toEat'></div>
    </div>

    <div class='toBuy task'>
      <h3><i class="fas fa-shopping-cart titles"></i>Buy</h3>
      <div id='toBuy'></div>
    </div>

  </div>
